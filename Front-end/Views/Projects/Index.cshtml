@model Project;

<html>
    <body>
     <form asp-controller="Projects" asp-action="AddProject">

        <div class="mb-3">
            <label class="form-label" 
            asp-for="@Model.Name">
                Name of the project:
            </label>
            <input asp-for="@Model.Name" 
             type="text" class="form-control" id="exampleFormControlInput1"
             placeholder="#movies_to_watch" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.CreatedDate"
            >Date of Creation:
            </label>
            <input asp-for="@Model.CreatedDate"
            type="date" id="CreatedDate"
            name="CreatedDate">
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Priority">
                Priority:
            </label>
            <input asp-for="@Model.Priority"
                   type="number" id="Priority"
                   name="Priority">
        </div>

        <div class="mb-3">
            <label asp-for="@Model.CurrentState">
                Current State:
            </label>
            <select asp-for="@Model.CurrentState">
                <option value="Not Started">Not Started</option>
                <option value="Active">Active</option>
                <option value="Completed">Completed</option>
            </select>  
        </div>

        <div className="creatingP-zone-button">
            <div class="button-container">
                <a>
                    <button type="submit">Create project</button>
                </a>  
            </div>
        </div>
     </form>
    </body>
</html>

